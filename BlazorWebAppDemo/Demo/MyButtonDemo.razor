@page "/MyButtonDemo"
@rendermode InteractiveServer

<h1>MyButtonDemo</h1>

<p role="status">Current count: @currentCount</p>
<MyButton class="btn btn-primary" OnClickEvent="IncrementCount" ConfirmMessage="Do you really want to count up?">ClickMe</MyButton>


@code {

    private int currentCount = 0;

    private async Task IncrementCount() {

        await Task.Delay(2000);
        currentCount++;
    }

}
